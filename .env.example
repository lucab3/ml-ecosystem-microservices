# ===========================================
# ML Ecosystem Microservices - Environment Configuration
# ===========================================

# ============ APPLICATION ============
NODE_ENV=development
LOG_LEVEL=debug
PORT=3000

# ============ MERCADOLIBRE API ============
# Get these from: https://developers.mercadolibre.com/
ML_CLIENT_ID=your_mercadolibre_client_id
ML_CLIENT_SECRET=your_mercadolibre_client_secret
ML_REDIRECT_URI=http://localhost/api/auth/ml/callback

# ============ JWT CONFIGURATION ============
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=24h

# ============ DATABASE CONFIGURATION ============
# PostgreSQL (Primary Database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ml_ecosystem
DB_USER=postgres
DB_PASSWORD=password

# MongoDB (Catalog Service)
MONGODB_URL=mongodb://localhost:27017/ml_ecosystem

# ============ REDIS CONFIGURATION ============
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# ============ KAFKA CONFIGURATION ============
KAFKA_BROKERS=localhost:9092

# ============ RATE LIMITING ============
GLOBAL_RATE_LIMIT_PER_HOUR=10000
USER_RATE_LIMIT_PER_HOUR=1000
ML_API_RATE_LIMIT_PER_HOUR=9000

# ============ CIRCUIT BREAKER ============
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30000

# ============ SECURITY ============
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80
SERVICE_TOKEN=your_inter_service_communication_token