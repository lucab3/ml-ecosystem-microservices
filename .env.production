# ML Ecosystem - Production Environment Configuration
# Use this for REAL MercadoLibre credentials and production deployment

NODE_ENV=production

# Database Configuration (Production)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ml_ecosystem
POSTGRES_USER=postgres
POSTGRES_PASSWORD=${POSTGRES_PASSWORD} # Set this in your deployment

# Redis Configuration (Production)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD} # Set this in your deployment

# MongoDB Configuration (Production)
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DB=ml_ecosystem
MONGODB_USER=admin
MONGODB_PASSWORD=${MONGODB_PASSWORD} # Set this in your deployment
MONGODB_URI=mongodb://admin:${MONGODB_PASSWORD}@mongodb:27017/ml_ecosystem?authSource=admin

# Kafka Configuration (Production)
KAFKA_BROKER=kafka:29092
KAFKAJS_NO_PARTITIONER_WARNING=1

# REAL MercadoLibre API Configuration
ML_CLIENT_ID=${ML_CLIENT_ID} # Your real ML app client ID
ML_CLIENT_SECRET=${ML_CLIENT_SECRET} # Your real ML app client secret
ML_REDIRECT_URI=https://yourdomain.com/auth/ml/callback
ML_API_BASE_URL=https://api.mercadolibre.com

# Authorized MercadoLibre Users (comma separated real ML user IDs)
# Add only the ML user IDs that should have access to your app
AUTHORIZED_ML_USERS=${AUTHORIZED_ML_USERS} # e.g: 123456789,987654321

# Security Configuration
JWT_SECRET=${JWT_SECRET} # Strong random secret for production
JWT_EXPIRES_IN=24h
SERVICE_TOKEN=${SERVICE_TOKEN} # Strong service-to-service token
ADMIN_TOKEN=${ADMIN_TOKEN} # Strong admin token

# Stock Monitoring Configuration
LOW_STOCK_THRESHOLD=5
MONITORING_INTERVAL_MINUTES=30

# Service Configuration
USER_SERVICE_PORT=3001
INTEGRATION_SERVICE_PORT=3002
CATALOG_SERVICE_PORT=3003
ANALYTICS_SERVICE_PORT=3004
INVENTORY_SERVICE_PORT=3005
NOTIFICATION_SERVICE_PORT=3006

# Rate Limiting (respect ML API limits)
ML_RATE_LIMIT_REQUESTS_PER_HOUR=1000
ML_RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging (Production)
LOG_LEVEL=warn
LOG_FORMAT=json

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# SSL/TLS (if using HTTPS)
SSL_CERT_PATH=${SSL_CERT_PATH}
SSL_KEY_PATH=${SSL_KEY_PATH}

# External Services (Production)
# SMTP Configuration for notifications
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=${SMTP_PORT}
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
SMTP_FROM=${SMTP_FROM}

# Monitoring and Analytics
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
SENTRY_DSN=${SENTRY_DSN}

# Cache TTL (Production optimized)
CACHE_TTL_USER_INFO=300
CACHE_TTL_PRODUCTS=60
CACHE_TTL_PRODUCT_DETAIL=180
CACHE_TTL_CATEGORIES=3600